{
  "rules": {
    "presence": {
      "$uid": {
        ".read": true,
        ".write": "$uid === auth.uid",
        ".validate": "newData.hasChildren(['username', 'state', 'lastActive'])",
        "username": { ".validate": "newData.isString() && newData.val().length <= 30" },
        "state": { ".validate": "newData.isString() && (newData.val() === 'online' || newData.val() === 'idle')" },
        "lastActive": { ".validate": "newData.isNumber()" },
        "currentPath": { ".validate": "newData.isString()" }
      }
    },
    "typing": {
      "$roomId": {
        "$uid": {
          ".read": true,
          ".write": "$uid === auth.uid"
        }
      }
    }
  }
}
